<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backround"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your option:"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tvTitle"
    android:layout_centerHorizontal="true"
    android:gravity="center">

    <Button
        android:id="@+id/btnFoodWaste"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Food Waste"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnExcessFood"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Excess Food"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnBuyFertilizer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Buy Fertilizer"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Add more buttons or UI elements as needed -->

</LinearLayout>
    </RelativeLayout>
